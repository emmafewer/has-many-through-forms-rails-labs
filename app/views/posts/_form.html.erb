<%= form_for @post do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>

    <%= form.label :content %>
    <%= form.text_area :content %>

    <%= form.collection_check_boxes :category_ids, @categories, :id, :name %>

    <%= form.fields_for :categories, post.categories.build do |categories_fields| %>
        <%= categories_fields.label :name, "Create Category" %>
        <%= categories_fields.text_field :name %>
    <% end %>

    <%= form.submit %>
  <% end %>
